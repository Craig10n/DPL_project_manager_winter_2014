<h1>Projects</h1>
<% @projects.each do |project| %>
  <h2><%= project.title %></h2>
  <p><%= project.description %></p>
  <p><%= project.deadline %></p>
  <%= link_to "New Task", new_project_task_path(project), class: 'btn btn-default' %>
  <%= link_to "Go to project", project_path(project), class: 'btn btn-default' %>

  <h3>Tasks</h3>
  <ul>
    <% project.tasks.each do |task| %>
    <li><%= task.title %></li>
    <%= link_to "Edit", edit_project_task_path(project, task), class: 'btn btn-default' %>
    <%= link_to "Destroy", project_task_path(project, task), method: :delete, class: 'btn btn-default' %>
    <% end %>
  </ul>

<% end %>
<%= link_to "New Project", new_project_path, class: 'btn btn-default'%>
