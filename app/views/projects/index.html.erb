
<!DOCTYPE html>
<html>
	<head>
		<title>Projects Page</title>
	</head>
	<body>
		<h1 class="text-center">Projects</h1>
    <table class="table table-bordered row">
    	<thead>
    		<tr>
    			<th class="col-md-3">Team</th>
    			<th class="col-md-2">Title</th>
    			<th class="col-md-5 text-nowrap">Description</th>
    			<th class="col-md-1">Deadline</th>
          <th class="col-md-1">Updates</th>
    		</tr>
    	</thead>
    	<tbody  class="table-list">
    		<% @projects.each do |project| %>
    		  <tr>
    			  <td class="col-md-3"><%= project.team %></td>
    			  <td class="col-md-2"><%= project.title %></td>
    			  <td class="col-md-5"><%= project.description %></td>
    			  <td class="col-md-1"><%= project.deadline %></td>
    			  <td class="col-md-1 text-center"><%= link_to 'Project', project_path(project), class: "btn btn-default" %></td>
    		  </tr>
    	  <% end %>
    	</tbody>
    </table>
    <%= link_to 'New Project', new_project_path, class: "btn btn-default" %>
    <!-- Button trigger modal -->
    <%= link_to 'New Project', new_project_path, class: "btn btn-primary", remote: true %>

<!--     <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
      New Project
    </button> -->

    <!-- Modal -->
    <div id='modal-div'>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
	</body>
</html>
