<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @user.name %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>Email</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>Is Github Authorized?</th>
          <td><%= @user.is_github_authorized? ? "#{icon('github-alt')} #{user.github_username}" : 'No' %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>